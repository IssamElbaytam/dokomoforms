-- Table: answer_boolean

-- DROP TABLE answer_boolean;

CREATE TABLE answer_boolean
(
  id          integer NOT NULL,
  answer      boolean NOT NULL,
  question_id integer NOT NULL,

  CONSTRAINT answer_boolean_pkey             PRIMARY KEY (id),
  CONSTRAINT answer_boolean_question_id_fkey FOREIGN KEY (question_id)
      REFERENCES question (id) MATCH SIMPLE
      ON UPDATE CASCADE ON DELETE CASCADE
)
WITH (
  OIDS=FALSE
);
ALTER TABLE answer_boolean
  OWNER TO postgres;

